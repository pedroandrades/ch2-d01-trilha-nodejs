{
    "openapi": "3.0.0",
    "info": {
        "title": "Desafio 01 Documentation",
        "description": "Documentation of Desafio 01 do Chapter 02 da trilha de Node.JS",
        "version": "1.0.0",
        "contact": {
            "email": "pehfass@gmail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": ["users"],
                "summary": "Cria um usuário",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "Pedro",
                                    "email": "email@doPedro.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Criado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean",
                                            "example": "false"
                                        },
                                        "id": {
                                            "type": "string",
                                            "example": "8390aa99-8492-4110-8a8c-72157696fcbd"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Pedro"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "email@doPedro.com"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "example": "2021-03-19T12:51:30.798Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "example": "2021-03-19T12:51:30.798Z"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email já existe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "error",
                                            "example": "Email already exists!"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": ["users"],
                "summary": "Retorna todos os usuários",
                "description": "Somente usuário admin pode acessar.",
                "parameters":  [ {
                    "name": "user_id",
                    "in": "header",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                } ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "additionalItems": true,
                                    "items": {
                                        "anyOf": [
                                            {
                                                "type": "object",
                                                "properties": {
                                                    "admin": {
                                                        "type": "boolean",
                                                        "example": "true"
                                                    },
                                                    "id": {
                                                        "type": "string",
                                                        "example": "8390aa99-8492-4110-8a8c-72157696fcbd"
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Pedro"
                                                    },
                                                    "email": {
                                                        "type": "string",
                                                        "example": "email@doPedro.com"
                                                    },
                                                    "created_at": {
                                                        "type": "string",
                                                        "example": "2021-03-19T12:51:30.798Z"
                                                    },
                                                    "updated_at": {
                                                        "type": "string",
                                                        "example": "2021-03-19T12:51:30.798Z"
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário sem permissão ou Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "error",
                                            "example": "User don't exist"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}": {
            "get": {
                "tags": ["users"],
                "summary": "Retorna um usuário específico",
                "parameters":  [ {
                    "name": "user_id",
                    "in": "path",
                    "description": "ID do usuário",
                    "required": true
                } ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean",
                                            "example": "false"
                                        },
                                        "id": {
                                            "type": "string",
                                            "example": "8390aa99-8492-4110-8a8c-72157696fcbd"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Pedro"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "email@doPedro.com"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "example": "2021-03-19T12:51:30.798Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "example": "2021-03-19T12:51:30.798Z"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "error",
                                            "example": "User don't exist"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{user_id}/admin": {
            "get": {
                "tags": ["users"],
                "summary": "Torna admin um usuário",
                "parameters":  [ {
                    "name": "user_id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                } ],
                "responses": {
                    "200": {
                        "description": "Operação realizada com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "admin": {
                                            "type": "boolean",
                                            "example": "true"
                                        },
                                        "id": {
                                            "type": "string",
                                            "example": "8390aa99-8492-4110-8a8c-72157696fcbd"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "Pedro"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "email@doPedro.com"
                                        },
                                        "created_at": {
                                            "type": "string",
                                            "example": "2021-03-19T12:51:30.798Z"
                                        },
                                        "updated_at": {
                                            "type": "string",
                                            "example": "2021-03-19T12:51:30.798Z"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Usuário não encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "error",
                                            "example": "User don't exist"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}